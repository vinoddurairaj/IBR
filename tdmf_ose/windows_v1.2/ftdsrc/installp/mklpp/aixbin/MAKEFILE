TOP=../../..

all: rel

rel: exec doc

exec: mkbaserel_PKG.sh mkinvent_PKG.sh
	./mkbaserel_PKG.sh -f -r E 

doc: mkbaserel_PKG.sh mkinvent_PKG.sh
	./mkbaserel_PKG.sh -f -r D 

#
# product name change here...
#
PKGIFY=@rm -f $@; \
	echo Making $@ from $?; \
	sed 	-e '\@%%Q%%@s@@%QNAME%@g' \
		-e '\@%%OEMNM%%@s@@%OEMNAME%@g' $? > $@;

mkbaserel_PKG.sh: mkbaserel.sh
	$(PKGIFY)
	@chmod +x $@

mkinvent_PKG.sh: mkinvent.sh
	$(PKGIFY)
	@chmod +x $@

clean:
	./mkbaserel.sh -c -r E
	./mkbaserel.sh -c -r D
	rm -f mkbaserel_PKG.sh mkinvent_PKG.sh
