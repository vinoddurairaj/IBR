killproc() {            # kill the named process(es)
    pid=`/usr/bin/ps -e |
             /usr/bin/grep -w $1 |
             /usr/bin/sed -e 's/^  *//' -e 's/ .*//'`
        [ "$pid" != "" ] && kill $2 $pid
}

if [ -d "/etc/rc3.d" ]; then
    if [ -w "/etc/rc3.d" ]; then
	echo "Removing SFTKdua Symbolic Links from /etc/rc3.d" 
	rm -f /etc/rc3.d/S26SFTKdua
    fi
fi

if [ "$BASEDIR" != "/opt" ]; then
	rm -f /opt/$PKGINST
fi

exit 0
