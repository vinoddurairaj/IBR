#
# delete /etc/opt/SFTKdua directory
#
if [ -d "/etc/opt/SFTKdua" ]; then
	rmdir -f /etc/opt/SFTKdua >/dev/null 2>&1
fi

#
# delete /opt/SFTKdua directory
#
DIRS="bin doc"
if [ -d "/opt/SFTKdua" ]; then
	for DIR in $DIRS
	do
		rmdir -f /opt/SFTKdua/${DIR} >/dev/null 2>&1
	done
	rmdir -f /opt/SFTKdua >/dev/null 2>&1
fi

# delete /var/opt/SFTKdua/Agn_tmp directory
if [ -d /var/opt/SFTKdua/Agn_tmp ]; then
	rm -fr /var/opt/SFTKdua/Agn_tmp >/dev/null 2>&1
fi

#
# delete /var/opt/SFTKdua directory
#
if [ -d "/var/opt/SFTKdua" ]; then
	rmdir -f /var/opt/SFTKdua >/dev/null 2>&1
fi

exit 0
