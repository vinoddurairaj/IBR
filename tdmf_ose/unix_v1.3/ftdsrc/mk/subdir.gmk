include ${TOP}/mk/vars.gmk

ifdef SUBDIRS
_MAKE_SUBDIRS=	\
	@set -e ; for i in ${SUBDIRS}; do \
		echo Making $@ in ${_TP}/$$i; \
		$(MAKE) ${EXTRA_MAKEFLAGS} -C $$i VERSION=$(VERSION) _TP=${_TP}/$$i $@; \
	done
endif

all::	_FORCE
	$(_MAKE_SUBDIRS)
clean:	_FORCE
	$(_MAKE_SUBDIRS)
ifdef CLEANS
	@$(RM) ${CLEANS}
endif

install:: _FORCE
	$(_MAKE_SUBDIRS)

_FORCE:

include ${TOP}/mk/depend.gmk
